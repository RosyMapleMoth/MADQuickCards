<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rellay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:ems="20"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="who is the president of the usa right now"
        android:textSize="40sp"
        tools:text="Question Text  Question Text ?" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_a_drawable"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Donald J trump"
        android:textSize="40sp"
        android:visibility="invisible"
        tools:text="This is the awnser " />

    <TextView
        android:id="@+id/tvAOne"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/tvAOne2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/card_a_drawable"
        android:gravity="center"
        android:text="Donald Trump"
        tools:text="Answer one" />

    <TextView
        android:id="@+id/tvAOne2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/tvAOne3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/card_a_drawable"
        android:gravity="center"
        android:text="Donald duck"
        tools:text="Answer two" />

    <TextView
        android:id="@+id/tvAOne3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/toggle_choices_visibility"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/card_a_drawable"
        android:gravity="center"
        android:text="Barack Obama"
        tools:text="Answer three" />

    <ImageView
        android:id="@+id/ivCompose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/ic_iconmonstr_edit_6" />


    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_iconmonstr_pencil_10" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="false"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_iconmonstr_eye_5" />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvQuestion"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_iconmonstr_arrow_28" />


    <ImageView
        android:id="@+id/ivPrev"
        android:scaleX="-1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvQuestion"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="211dp"
        app:srcCompat="@drawable/ic_iconmonstr_arrow_28" />

    <ImageView
        android:id="@+id/ivTrash"
        android:layout_width="40dp"
        android:layout_height="40dp"


        android:layout_below="@+id/tvQuestion"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="20dp"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_iconmonstr_trash_can_2" />
</RelativeLayout>